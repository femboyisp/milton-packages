# Template file for 'walker'
pkgname=walker
version=2.12.2
revision=1
build_style=cargo
hostmakedepends="pkg-config protobuf"
makedepends="cairo-devel gtk4-layer-shell-devel poppler-glib-devel"
depends="elephant"
short_desc="Multi-Purpose highly extendable application launcher for Wayland"
